#!/usr/bin/env bash
set -euo pipefail

# path to pacli
if [[ -x /bin/pacli ]]; then PACLI=/bin/pacli
elif [[ -x "$HOME/.local/bin/pacli" ]]; then PACLI="$HOME/.local/bin/pacli"
else
  echo "pacli not found in /bin or ~/.local/bin" >&2
  exit 1
fi

echo "Welcome to the PACLI shell (no Slimcoin daemon control)."
while true; do
  read -r -p 'pacli > ' line || exit 0
  [[ -z "$line" ]] && continue
  case "$line" in
    exit|quit|:q) exit 0 ;;
    \!* ) bash -lc "${line:1}"; continue ;;   # optional: !ls, !cat â€¦
  esac
  eval "$PACLI $line" || printf '[pacli] exit code %s\n' "$?"
done
